<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activity.PerfilUsuarioActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Perfil de Usuário"
                    android:textColor="@color/textColor"
                    android:textSize="22sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_fotoPerfilUsuario"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/txt_perfilNomeUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Nome: "
                    android:textColor="@color/textColor"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txt_perfilEmailUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Email: "
                    android:textColor="@color/textColor"
                    android:textSize="17sp" />

                <!-- Botões 'Salvar Foto' e 'Excluir Conta' -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <!-- Botão de Salvar Foto -->
                    <Button
                        android:id="@+id/btn_salvarFotoPerfil"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_style"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Atualizar Perfil"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <!-- Botão de Excluir Conta -->
                    <Button
                        android:id="@+id/btn_excluirConta"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/btn_style"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Excluir Conta"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginVertical="16dp"
                    android:background="@color/lightGrey" />

                <!-- Botão de Nova Conta -->
                <Button
                    android:id="@+id/btn_voltarMenuPrincipal"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_button"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Voltar ao Menu Principal"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp" />

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</LinearLayout>